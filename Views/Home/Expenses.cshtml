@{
    ViewData["Title"] = "Expenses";
}

@model List<Expense>

<div class="text-center">
    <h1 class="display-4">Expenses</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Value</th>
                <th>Category</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var expense in Model)
                {
                    <tr>
                    <td>@expense.Id</td>
                    <td>@expense.Value</td>
                    <td>@expense.Category</td>
                    <td>
                            <a asp-action="CreateEditExpense" asp-route-id="@expense.Id" class="text-decoration-none">Edit</a>
                            <a asp-action="DeleteExpense" asp-route-id="@expense.Id" class="text-decoration-none">Delete</a>
                    </td>
                    </tr>
                }
            }
        </tbody>
    </table>
    <h3>Total expenses $@ViewBag.Expenses</h3>
</div>
