@{
    ViewData["Title"] = "Expenses";
}

@model List<Expense>

<div class="container py-5">
    <h1 class="text-center display-5 mb-4 text-primary">Your Expenses</h1>

    <div class="table-responsive shadow rounded">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Value ($)</th>
                    <th scope="col">Category</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var expense in Model)
                {
                    <tr>
                        <td>@expense.Id</td>
                        <td class="fw-semibold text-success">$@expense.Value</td>
                        <td>@expense.Category</td>
                        <td>
                            <a asp-action="CreateEditExpense" asp-route-id="@expense.Id" class="btn btn-sm btn-outline-primary me-2">✏️ Edit</a>
                            <a asp-action="DeleteExpense" asp-route-id="@expense.Id" class="btn btn-sm btn-outline-danger">🗑️ Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="text-end mt-4">
        <h4 class="fw-bold text-secondary">Total Expenses: <span class="text-danger">$@ViewBag.Expenses</span></h4>
    </div>
</div>
